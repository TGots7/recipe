<%= form_with(model: instruction, local: true) do |form| %>
  <% if instruction.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(instruction.errors.count, "error") %> prohibited this instruction from being saved:</h2>

      <ul>
      <% instruction.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="fields">
    <%= form.label :name %>
    <%= form.text_field :name %><br>
    <%= form.label :content %>
    <%= form.text_area :content %><br>
    <%= form.label :cook_time %>
    <%= form.text_field :cook_time %><br>
    <%= form.hidden_field :user_id, value: current_user.id %>
    <!-- hidden field, user_id
    t.integer "user_id" -->
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
