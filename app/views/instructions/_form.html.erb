<%= form_with(model: instruction, local: true) do |form| %>
  <% if instruction.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(instruction.errors.count, "error") %> prohibited this instruction from being saved:</h2>

      <ul>
      <% instruction.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="container">
  <div class="row">
    <div class="col-sm-6">
        <div class="fields">
          <%= form.label :name %>
          <%= form.text_field :name %><br>
          <%= form.label :content %>
          <%= form.text_area :content %><br>
          <%= form.label :cook_time %>
          <%= form.text_field :cook_time %><br>
          <%= form.hidden_field :user_id, value: current_user.id %>
          <!-- hidden field, user_id
          t.integer "user_id" -->
        </div>
      </div>

    <div class="col-sm-6">
      <div class="fields ingredients">
          <%= form.collection_check_boxes(:ingredient_ids, Ingredient.all, :id, :name) %>
          

          <div class="fields ingredients">
          <p>
            <%= form.fields_for :ingredients do |ingredient_builder| %>
              <%= ingredient_builder.text_field :name %><br>
            <% end %>
          </p>
          </div>

          <div class="actions">
            <%= form.submit %>
          </div>
      </div>
    </div>

  </div>
</div>

<% end %>

<br>
