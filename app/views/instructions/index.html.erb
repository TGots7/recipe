<p id="notice"><%= notice %></p>

<h1>Instructions</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @instructions.each do |instruction| %>
      <tr>
        <td><%= link_to 'Show', instruction %></td>
        <td><%= link_to 'Edit', edit_instruction_path(instruction) %></td>
        <td><%= link_to 'Destroy', instruction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Instruction', new_instruction_path %>

<h1>Recipe home page</h1>

<% if @user.nickname == nil || @user.nickname == "" %>
  <h2>Welcome <%= @user.email %></h2>
<% else %>
  <h2>Welcome <%= @user.nickname %></h2>
<% end %>

<!-- all recipes
 -->
 <h2>All Recipes</h2>
 <div class="recipe">
  <% @instructions.each do |recipe|%>
    <h3>Name: <%= recipe.name %></h3>
    <p>Instructions: <%= recipe.content %></p>
    <p>Cook Time: <%= recipe.cook_time %></p>
    <div class="ingredients">
      <h4>Ingredients</h4>
      <ol>
      <% recipe.ingredients.all.each do |ing| %>
        <li><p><%= ing.name %></p></li>
      <% end %>
      </ol>
    </div>
  <% end %>
</div>

<h2>Your Recipes</h2>
<div class="recipe">
