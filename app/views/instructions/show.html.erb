<div class="container">
	<div class="row justify-content-center">
		<div class="col-md-6 recipe">
		<h1>Recipe for <%= @instruction.name %></h1>
		<p><%= @instruction.content %></p>
		<p><%= @instruction.cook_time %></p>

		<h3>Ingredients</h3>
		<ol>
			<% @instruction.ingredients.each do |ing| %>
				<li><p><%= link_to ing.name, ingredient_path(ing) %></p></li>
			<% end %>
		</ol>

		<p>RATING</p>


		<% if policy(@instruction).update? %>
			<%= link_to 'Edit', edit_instruction_path(@instruction) %> <br>
		<% end %>
		</div>
	</div>
</div>
