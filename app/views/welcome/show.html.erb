<div class="container">
    <div class="row text-center">
        <h2 class="personal-title text-center">Your Recipes</h2>
    </div>
    <div class="row">
        <div class="col-sm-8 person">
        <h4 class="text-center"><%= current_user.nickname %></h4>
        <p>Your email: <u><%= current_user.email %></u></p>
        <%= image_tag current_user.avatar.url(:thumb) %><br><br>
                <%= form_for @user, html: {multipart: true} do |f| %>
                  <%= f.file_field :avatar %><br><br>
                  <%= f.submit %>
                <% end %>
        </div>   
    </div>
    <div class="row">
        <div class="col-sm-8">
          <%= render 'instructions/show_recipes', instructions: @user.instructions %>
        </div>
        <div class="col-sm-4 side_bar text-center">
            <%= link_to 'To All Chefs', users_path %><br>
        </div>
    </div>
</div>

