<div class="container">
	<div class="row justify-content-center">
		<div class="col-md-6 recipe">
		<h4 class="text-center"><%= @ingredient.name %></h4>

		<h6> This ingredient is used in these recipes </h6>
			<ul><% @ingredient.instructions.each do |recipe| %>
				<li><%= link_to recipe.name, instruction_path(recipe) %></li>
				<% end %>
			</ul>
		<%= render 'admin_links', ingredient: @ingredient %>
		</div>
	</div>
</div>
